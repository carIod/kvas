#! /usr/bin/env bash
set -e
DEBUG=NO

line()(printf '=%.s' {1..100} && printf '\n')

if [ ${DEBUG} = 'YES' ]; then
	num_proc=1
	deb="-j${num_proc} V=sc"
else
	num_proc=$(nproc)
	deb="-j${num_proc}";
fi

line; echo "Сборка запущена: $(zdump EST-3)"; line

cd /apps/entware/

make oldconfig <<< y
make tools/install ${deb}
make toolchain/install ${deb}
make target/compile ${deb}

line; echo "Сборка завершена: $(zdump EST-3)"; line
