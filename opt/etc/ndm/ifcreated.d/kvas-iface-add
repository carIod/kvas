if [ "${1}" = "hook" ] ; then

	# Подключаем библиотеку ndm_d
	. /opt/apps/kvas/bin/libs/ndm_d

	#	В случае, если созданное подключение еще нет в списке интерфейсов,
	#	то добавляем его в файл /opt/etc/inface_equals
    grep "${id}" "${iface_file}" || is_cli_iface_global "${id}" \
    || echo "${id}|${system_name}|$(get_iface_description "${id}")"  >> "${iface_file}"

fi