if [ "${1}" = "hook" ] ; then

	# Подключаем библиотеку ndm_d
	. /opt/apps/kvas/bin/libs/ndm_d

	#	В случае, если созданное подключение уже есть т в списке интерфейсов,
	#	то удаляем его из файла  /opt/etc/inface_equals

    grep -q "${id}" "${iface_file}" && sed -i '/'"${id}"'/d' "${iface_file}"

fi
